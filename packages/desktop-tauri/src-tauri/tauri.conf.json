{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hawkeye",
  "version": "0.1.0",
  "identifier": "com.hawkeye.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Hawkeye",
        "width": 420,
        "height": 600,
        "minWidth": 360,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "center": true,
        "visible": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "AI-Powered Screen Assistant",
    "longDescription": "Hawkeye is an AI-powered screen assistant that observes your work context and provides intelligent suggestions.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "endpoints": [
        "https://github.com/anthropics/hawkeye/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
