{
  "name": "hawkeye-assistant",
  "displayName": "%displayName%",
  "icon": "images/icon.png",
  "description": "%description%",
  "version": "0.2.0",
  "publisher": "hawkeye",
  "repository": {
    "type": "git",
    "url": "https://github.com/tensorboy/hawkeye"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "hawkeye.observe",
        "title": "%command.observe.title%",
        "icon": "$(eye)"
      },
      {
        "command": "hawkeye.showStatus",
        "title": "%command.showStatus.title%",
        "icon": "$(info)"
      },
      {
        "command": "hawkeye.generatePlan",
        "title": "%command.generatePlan.title%",
        "icon": "$(sparkle)"
      },
      {
        "command": "hawkeye.executePlan",
        "title": "%command.executePlan.title%",
        "icon": "$(play)"
      },
      {
        "command": "hawkeye.rejectPlan",
        "title": "%command.rejectPlan.title%",
        "icon": "$(close)"
      },
      {
        "command": "hawkeye.configure",
        "title": "%command.configure.title%",
        "icon": "$(gear)"
      },
      {
        "command": "hawkeye.reconnect",
        "title": "%command.reconnect.title%",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hawkeye",
          "title": "%viewContainer.hawkeye.title%",
          "icon": "$(eye)"
        }
      ]
    },
    "views": {
      "hawkeye": [
        {
          "id": "hawkeye.intents",
          "name": "%view.intents.name%",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "hawkeye.connectionMode": {
          "type": "string",
          "enum": [
            "desktop",
            "standalone"
          ],
          "default": "desktop",
          "description": "%config.connectionMode.description%"
        },
        "hawkeye.desktopHost": {
          "type": "string",
          "default": "localhost",
          "description": "%config.desktopHost.description%"
        },
        "hawkeye.desktopPort": {
          "type": "number",
          "default": 9527,
          "description": "%config.desktopPort.description%"
        },
        "hawkeye.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableNotifications.description%"
        }
      }
    },
    "keybindings": [
      {
        "command": "hawkeye.observe",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hawkeye.observe",
          "when": "view == hawkeye.intents",
          "group": "navigation"
        },
        {
          "command": "hawkeye.configure",
          "when": "view == hawkeye.intents"
        }
      ]
    }
  },
  "scripts": {
    "dev": "npm run watch",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "package": "vsce package",
    "lint": "eslint src/ || true",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.11",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@hawkeye/core": "workspace:*",
    "@vscode/l10n": "^0.0.18",
    "ws": "^8.16.0"
  }
}