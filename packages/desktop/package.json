{
  "name": "@hawkeye/desktop",
  "version": "0.2.0",
  "description": "Hawkeye Desktop Application - Intelligent Task Assistant",
  "author": {
    "name": "Hawkeye Team",
    "email": "hawkeye@example.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tensorboy/hawkeye"
  },
  "main": "./out/main/bootstrap.js",
  "scripts": {
    "dev": "unset ELECTRON_RUN_AS_NODE && electron-vite dev",
    "build": "electron-vite build",
    "start": "electron .",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "lint": "eslint src/ || true",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist out"
  },
  "dependencies": {
    "@hawkeye/core": "workspace:*",
    "abort-controller": "3.0.0",
    "agentkeepalive": "4.5.0",
    "anymatch": "3.1.3",
    "balanced-match": "1.0.2",
    "binary-extensions": "2.2.0",
    "brace-expansion": "1.1.11",
    "braces": "3.0.2",
    "chokidar": "3.5.3",
    "concat-map": "0.0.1",
    "event-target-shim": "5.0.1",
    "fill-range": "7.0.1",
    "form-data-encoder": "1.7.2",
    "formdata-node": "4.4.1",
    "fs.realpath": "1.0.0",
    "glob": "7.2.3",
    "glob-parent": "5.1.2",
    "humanize-ms": "1.2.1",
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "inflight": "1.0.6",
    "inherits": "2.0.4",
    "is-binary-path": "2.1.0",
    "is-extglob": "2.1.1",
    "is-glob": "4.0.3",
    "is-number": "7.0.0",
    "minimatch": "3.1.2",
    "minimist": "1.2.8",
    "mkdirp": "0.5.6",
    "ms": "2.1.3",
    "node-domexception": "1.0.0",
    "node-fetch": "2.7.0",
    "normalize-path": "3.0.0",
    "once": "1.4.0",
    "path-is-absolute": "1.0.1",
    "picomatch": "2.3.1",
    "react-i18next": "^16.5.3",
    "readdirp": "3.6.0",
    "rimraf": "2.6.3",
    "temp": "^0.9.4",
    "to-regex-range": "5.0.1",
    "tr46": "0.0.3",
    "uuid": "9.0.1",
    "web-streams-polyfill": "4.0.0-beta.3",
    "webidl-conversions": "3.0.1",
    "whatwg-url": "5.0.0",
    "wrappy": "1.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.hawkeye.app",
    "productName": "Hawkeye",
    "publish": null,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "icon": "build/icon.icns",
      "identity": null
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    }
  }
}
